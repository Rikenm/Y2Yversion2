<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_login"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        >

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_above="@+id/mainLayout"
            android:layout_alignParentTop="true"
            android:id="@+id/headerLayout"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="147dp"
                    android:layout_height="58dp"
                    android:src="@drawable/bitmap"
                    android:layout_marginBottom="55dp"


                    />

            </LinearLayout>




        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:id="@+id/mainLayout"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"



                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_username"
                    android:layout_width="match_parent"
                    android:textColorHint="#089BD7"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/fragment_login_userName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:fontFamily="@font/roboto"

                        android:hint="Username"
                        android:textColorHint="#089BD7" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_name"
                    android:layout_width="match_parent"
                    android:textColorHint="#089BD7"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/fragment_login_userPassword"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="37dp"
                        android:fontFamily="@font/roboto"
                        android:hint="Password"
                        android:layout_marginBottom="10dp"
                        android:inputType="textPassword"
                        android:textColorHint="#089BD7" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#089BD7"
                    >


                </View>



            </LinearLayout>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#089BD7"
            android:layout_below="@+id/mainLayout"
            android:id="@+id/footerLayout">

            <Button
                android:id="@+id/fragment_login_register_button"
                android:layout_width="312dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#CAD53D"
                android:fontFamily="@font/roboto"
                android:onClick="login"
                android:text="Login" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:ellipsize="marquee"

                        android:singleLine="true"

                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@android:color/white" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>