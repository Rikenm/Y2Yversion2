<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal"

    tools:context="com.rikenmaharjan.y2yc.fragments.ResetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="34sp"
        android:text="Password Setup" />

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Please fill up the form below"
        />

        <ImageView
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:src="@drawable/sign" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

          <View
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="match_parent">

          </View>
       <FrameLayout
           android:layout_width="0dp"
           android:layout_weight="6"
           android:layout_height="wrap_content">

           <android.support.design.widget.TextInputLayout
               android:id="@+id/input_layout_name"
               android:layout_width="match_parent"
               android:textColorHint="#089BD7"
               android:layout_height="wrap_content">



               <EditText
                   android:id="@+id/txt_new_password"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/roboto"
                   android:hint="User Name"
                   android:textSize="23dp"
                   android:inputType="text"
                   android:textColorHint="#089BD7" />


           </android.support.design.widget.TextInputLayout>




       </FrameLayout>

          <View
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="match_parent">
          </View>

      </LinearLayout>





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="Just remembered ?"
            />

    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="60dp">
    <View
        android:layout_width="match_parent"
        android:background="#F4E878"
        android:layout_height="match_parent">
    </View>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btn_setup_send"
            android:background="#FFCA71"
            android:textColor="@color/white"
            android:text="Send"
             />
    </FrameLayout>



</LinearLayout>
