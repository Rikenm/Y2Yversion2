<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragments.ViewLotteryResultFragment"
    android:padding="20dp"
    android:background="#EFEFEF"

    android:layout_height="match_parent">




<FrameLayout
    android:layout_width="match_parent"
    android:layout_centerVertical="true"
    android:layout_height="wrap_content">
















    <android.support.v7.widget.CardView
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_centerVertical="true"





    android:layout_height="475dp"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="3dp"
    android:layout_weight="7.3"
    android:elevation="1dp"
    >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="40dp"

            android:src = "@drawable/circle"

            android:layout_gravity="center_horizontal|top"
            />


        <ImageView
            android:layout_width="80dp"
            android:layout_height="40dp"

            android:src = "@drawable/inversecircle"

            android:layout_gravity="center_horizontal|bottom"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="50dp"

            android:background="#EFEFEF"
            android:id="@+id/line"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity = "bottom"
            android:layout_marginBottom="70dp"


            android:background="#EFEFEF"
            android:id="@+id/line2"
            android:orientation="horizontal">


        </LinearLayout>










        <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"

        android:padding="30dp"

        android:orientation="vertical">










        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:layout_marginTop = "40dp"
            android:text="Lottery Result"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#76C3D7"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto"
            android:text="Long Term Lottery"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#019AD7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="10dp"


            android:text="Date"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#00B9E6" />


        <TextView
            android:id="@+id/date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textColor="#020202" />

        <TextView
            android:id="@+id/longTermLottery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#020202"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/roboto"
            android:text="E-bed Lottery"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#019AD7" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"

            android:layout_marginTop="10dp"
            android:text="Date"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#00B9E6" />


        <TextView
            android:id="@+id/date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textColor="#020202" />

        <TextView
            android:id="@+id/eBedLottery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="0dp"
            android:textColor="#020202"
            android:textSize="22sp"
            android:textStyle="bold" />







    </LinearLayout>




        <ProgressBar
        android:id="@+id/loadingPanel"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true" />







    </android.support.v7.widget.CardView>





</FrameLayout>



</RelativeLayout>