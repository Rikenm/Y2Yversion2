<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragments.ViewLotteryResultFragment"
    android:background="#EFEFEF"

    android:layout_height="match_parent">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_centerVertical="true"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Lottery" />



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="0dp"
            app:cardCornerRadius="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:layout_editor_absoluteX="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/view1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#D65745"
                    app:cardCornerRadius="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LONG"
                        android:layout_gravity="center"
                        android:fontFamily="Helvetica"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Term"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/longTermLottery"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="X"
                        android:textStyle="bold"
                        android:textColor="#D65745"
                        android:layout_gravity="center"
                        android:layout_marginBottom="25dp"
                        android:textSize="36dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date1"
                        android:text="YYYY-MM-DD"
                        android:layout_gravity="center"
                        android:layout_marginTop="8sp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="1"
                        android:layout_gravity="bottom"
                        android:background="#F2F4F5">
                    </View>

                </android.support.v7.widget.CardView>

            </LinearLayout>



        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardCornerRadius="0dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="232dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E7A03C"
                    app:cardCornerRadius="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ebed"
                        android:layout_gravity="center"
                        android:fontFamily="Helvetica"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOTTO"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    app:cardCornerRadius="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/eBedLottery"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="X"
                        android:textStyle="bold"
                        android:textColor="#E7A03C"
                        android:layout_gravity="center"
                        android:layout_marginBottom="25dp"
                        android:textSize="36dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date2"
                        android:text="YYYY-MM-DD"
                        android:layout_gravity="center"
                        android:layout_marginTop="8sp"
                        />

                </android.support.v7.widget.CardView>

            </LinearLayout>


        </android.support.v7.widget.CardView>



        <Button
            android:id="@+id/btnReferesh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:text="CHeck Lottery"
            android:fontFamily="@font/acme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintVertical_bias="0.96"
            android:textSize="21sp"
            android:textColor="@color/white"
            android:background="#58B99D"
            tools:layout_editor_absoluteX="16dp" />


    </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:id="@+id/loadingPanel"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

</FrameLayout>



</RelativeLayout>