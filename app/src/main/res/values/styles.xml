<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name= "android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/opa_black</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="elevation">0dp</item>
        <item name="colorAccent">@color/opa_black</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="colorPrimary">@color/baby_blue</item>
        <item name="android:colorForeground">@android:color/background_dark</item>
        <item name="colorPrimaryDark">@color/opa_black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>



    </style>











    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>




    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
